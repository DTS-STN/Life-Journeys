{
  "name": "life-journeys",
  "version": "0.1.0",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "npm run success-message"
    }
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test-dev": "jest --watch",
    "test:ci": "jest --ci",
    "lint": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "success-message": "echo \n\n\nHusky: Auto checking completed, files have been formatted with Prettier."
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.0.4",
    "next": "latest",
    "postcss": "^8.1.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwindcss": "^2.0.2",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "cypress": "^6.8.0",
    "cypress-axe": "0.12.2",
    "husky": "^4.3.4",
    "jest": "^26.6.3"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write",
      "git add ."
    ]
  }
}
